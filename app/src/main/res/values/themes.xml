<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HarcamalarUygulamasi" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Uygulamamızın status barının yani toolbarın üst kısmının rengi beyazdır bunu yapmak için bu kod kullanılır -->
        <item name="colorPrimaryDark" tools:targetApi="23">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>



        <!-- Uygulamamızda Toolbar yoktur aşağıdaki kodlarla kaldırılır -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>
</resources>